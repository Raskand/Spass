<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <View
        android:background="#30000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/rlt_info"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#d7162642">

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Spass'e Hoşgeldin,"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:fontFamily="@font/varela" />

        <TextView
            android:id="@+id/home_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:text="Buradan Bilgi Üniversitesi'ne ait yerleşim haritasını buradan görebilir, gitmek istediğin sınıf hakkında yol tarifi alabilirsin"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:fontFamily="@font/varela" />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:background="#d6101a2a">

            <ImageView
                android:id="@+id/image_go"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="57dp"
                android:background="@drawable/left"/>


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rlt_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/login1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:background="@drawable/rectangle"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="Sınıf Bilgilerini Gör"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:fontFamily="@font/varela" />


        <TextView
            android:id="@+id/login2"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="Yoklamaya Katıl"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:fontFamily="@font/varela" />

        <TextView
            android:id="@+id/txt_class"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="Sınıf Dolulukları"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:fontFamily="@font/varela" />




    </RelativeLayout>



</RelativeLayout>